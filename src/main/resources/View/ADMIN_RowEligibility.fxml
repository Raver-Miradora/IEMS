<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>

<HBox fx:id="eligibilityRowHBox" alignment="CENTER_LEFT" spacing="8.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.raver.iemsmaven.Controller.ADMIN_RowEligibilityCTRL">
   <children>
      <TextField fx:id="eligibilityNameField" promptText="Eligibility/Career Service" HBox.hgrow="ALWAYS" />
      <TextField fx:id="ratingField" prefWidth="80.0" promptText="Rating" />
      <DatePicker fx:id="examDatePicker" prefWidth="130.0" promptText="Date of Exam" />
      <TextField fx:id="examPlaceField" prefWidth="200.0" promptText="Place of Exam" HBox.hgrow="SOMETIMES" />
      <TextField fx:id="licenseNumberField" prefWidth="120.0" promptText="License No." />
      <DatePicker fx:id="validityDatePicker" prefWidth="130.0" promptText="Validity Date" />
      <Button fx:id="removeButton" onAction="#handleRemoveRow" style="-fx-background-color: #e74c3c; -fx-padding: 5 8;" text="X" textFill="white" />
   </children>
   <padding>
      <Insets bottom="5.0" top="5.0" />
   </padding>
</HBox>