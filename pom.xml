    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.8.1</version>
                
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>3.2.4</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <transformers>
                                <transformer implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
                                    <mainClass>com.raver.iemsmaven.RunMain</mainClass>
                                </transformer>
                            </transformers>
                            <shadedClassifierName>jar-with-dependencies</shadedClassifierName>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.openjfx</groupId>
                <artifactId>javafx-maven-plugin</artifactId>
                <version>0.0.8</version>
                <configuration>
                    <mainClass>com.raver.iemsmaven.RunMain</mainClass>
                </configuration>
            </plugin>
           <plugin>
            <groupId>org.panteleyev</groupId>
            <artifactId>jpackage-maven-plugin</artifactId>
            <version>1.7.1</version>
            <configuration>
                <name>IEMS Application</name>
                <mainClass>com.raver.iemsmaven.RunMain</mainClass>
                <mainJar>IEMSmaven-1.0.0.jar</mainJar>
                <input>${project.build.directory}</input>
                <type>MSI</type>
                <appVersion>${project.version}</appVersion>
                <vendor>RRK Solutions</vendor>
                <copyright>Copyright Â© 2025</copyright>
                <icon>src/main/resources/Images/program_icon_dark.ico</icon>
                <destination>${project.build.directory}/jpackage-build</destination>
                <licenseFile>src/main/resources/LICENSE.txt</licenseFile>
                <!-- Windows options -->
                <winMenu>true</winMenu>
                <winShortcut>true</winShortcut>
                <winMenuGroup>IEMS Application</winMenuGroup>
            </configuration>
        </plugin>



        </plugins>
    </build>
</project>
